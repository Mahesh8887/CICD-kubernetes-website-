- hosts: all
  become: true
  tasks:
      - name: delete old deployment
        command: kubectl1 delete -f /home/ubuntu/deployment.yml
    
      - name: create service
        command: kubectl1 delete -f /home/ubuntu/service.yml  

      - name: create new deployment
        command: kubectl1 apply -f /home/ubuntu/deployment.yml
    
      - name: create new service
        command: kubectl1 apply -f /home/ubuntu/service.yml
